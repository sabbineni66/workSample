<?xml version="1.0"?>

<!DOCTYPE MODE SYSTEM "xmode.dtd">

<MODE>
	<PROPS>
		<PROPERTY NAME="lineComment" VALUE="--" />
		<PROPERTY NAME="noTabs" VALUE="true" />
		<PROPERTY NAME="tabSize" VALUE="2" />
		<PROPERTY NAME="indentSize" VALUE="2" />
		
		<!-- auto-indent -->
		<PROPERTY NAME="indentNextLines" VALUE="^.*(begin|then)\s*$"/>
		<PROPERTY NAME="unindentThisLine" VALUE="^((.*(end|endif);|\s*else)$)|(\s*elsif.*$)"/>
		<PROPERTY NAME="unindentNextLines" VALUE="^.*((end|endif);$|(\s*elsif.*$))"/>
		<PROPERTY NAME="electricKeys" VALUE=";ef"/>
	</PROPS>

	<RULES IGNORE_CASE="FALSE" HIGHLIGHT_DIGITS="TRUE">
		<SPAN TYPE="LITERAL1" NO_LINE_BREAK="TRUE">
			<BEGIN>"</BEGIN>
			<END>"</END>
		</SPAN>
		
		<EOL_SPAN TYPE="COMMENT1">--</EOL_SPAN>
		
		<MARK_FOLLOWING AT_WORD_START="TRUE" MATCH_TYPE="KEYWORD1" TYPE="FUNCTION">function </MARK_FOLLOWING>
		<MARK_FOLLOWING AT_WORD_START="TRUE" MATCH_TYPE="KEYWORD1" TYPE="FUNCTION">function  </MARK_FOLLOWING>
		<MARK_FOLLOWING AT_WORD_START="TRUE" MATCH_TYPE="KEYWORD1" TYPE="FUNCTION">function   </MARK_FOLLOWING>
		<MARK_FOLLOWING AT_WORD_START="TRUE" MATCH_TYPE="KEYWORD1" TYPE="FUNCTION">function    </MARK_FOLLOWING>
		<MARK_FOLLOWING AT_WORD_START="TRUE" MATCH_TYPE="KEYWORD1" TYPE="FUNCTION">function     </MARK_FOLLOWING>
		<MARK_FOLLOWING AT_WORD_START="TRUE" MATCH_TYPE="KEYWORD1" TYPE="FUNCTION">function      </MARK_FOLLOWING>
		<MARK_FOLLOWING AT_WORD_START="TRUE" MATCH_TYPE="KEYWORD1" TYPE="FUNCTION">function       </MARK_FOLLOWING>
		
		<MARK_PREVIOUS TYPE="FUNCTION" MATCH_TYPE="NULL">(</MARK_PREVIOUS>
		
		<MARK_FOLLOWING AT_WORD_START="TRUE" TYPE="LITERAL3">?</MARK_FOLLOWING>

		<KEYWORDS>
			<KEYWORD1>and</KEYWORD1>
			<KEYWORD1>attribute</KEYWORD1>
			<KEYWORD1>begin</KEYWORD1>
			<KEYWORD1>case</KEYWORD1>
			<KEYWORD1>circular</KEYWORD1>
			<KEYWORD1>class</KEYWORD1>
			<KEYWORD1>collection</KEYWORD1>
