<Segment name="AEI" comment="To provide summary information on equipment type and count">
  <Field name="EquipmentDescriptionCode" min="2" max="2" validation="T40" comment="Code identifying type of equipment used for shipment"/>
  <Field name="Quantity" type="double" min="1" max="15" comment="Numeric value of quantity"/>
  <Field name="YesNoConditionOrResponseCode" min="1" max="1" validation="T1073" comment="Code indicating a Yes or No condition or response"/>
</Segment>
