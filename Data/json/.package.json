{
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "parser": "babel",
    "printWidth": 78,
    "proseWrap": "always",
    "requirePragma": false,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "scripts": {
    "tidy": "f () { prettier-eslint --write \"src/**/*.js\" || exit 0; }; f",
    "tidy:file": "f () { prettier-eslint --write \"${1}\" || exit 0; }; f"
  }
}
