{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "prettier/standard"
  ],
  "rules": {
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": false,
        "allowTaggedTemplates": true
      }
    ]
  }
}
