{
  "manifest_version": 2,
  "name": "chromuxinator",
  "description": "Launch predefined sets of Chrome instances with different profiles, behaviors, and geometries.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon-16.png"
  },

  "permissions": [
    "system.display", "tabs"
  ],

  "commands": {
    "show-chromuxinator": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "MacCtrl+M"
      },
      "description": "Show chromuxinator"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  }
}
