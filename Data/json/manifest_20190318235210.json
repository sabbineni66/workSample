
{
  "name": "Speak Thai",
  "description": "Reads out selected thai text",
  "version": "0.2",
  "permissions": ["contextMenus","https://translate.google.co.th/"],
  "background": {
    "scripts": ["speak-thai.js"]
  },
  "manifest_version": 2,
  "content_scripts": [
  	{
  		"matches": ["<all_urls>"], 
  		"js": ["inject.js"]
  	}
  ],
  "icons":{
  	"16":"icon16.png",
  	"48":"icon48.png",
    "64":"icon64.png",
  	"128":"icon128.png"}
}