{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "0.8",
  "description": "List open tabs/windows.",
  "icons": { "128": "icon.png" },
  "background": {
    "persistent": false
  },
  "homepage_url": "https://github.com/calvin/list-them",
  "permissions": [
    "tabs"
  ],
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "icon.png"
  }
}